<div class="ma__main-nav-hamburger">
  <ul class="ma__main-nav-hamburger__items js-main-nav-hamburger" role="menubar">
    {% for nav in mainNav %}
      {% set buttonId =  'button' ~ loop.index %}
      {% set menuId =  'menu' ~ loop.index %}
      <li  role="menuitem" class="ma__main-nav-hamburger__item {{ nav.active ? 'is-active' : '' }} {{ nav.subNav ?
      'has-subnav js-main-nav-toggle-hamburger' : 'js-main-nav-hamburger__top-link' }}" tabindex="-1">
        {% if nav.subNav %}
          <button type="button" id="{{ buttonId }}" class="ma__main-nav-hamburger__top-link
          js-main-nav-hamburger__top-link" aria-haspopup="true" aria-expanded="false" aria-label="show submenu"
                  tabindex="0">
          <span class="visually-hidden show-label">Show the sub topics of </span>{{ nav.text }}
          <span class="aria-hidden toggle-indicator"></span>
          </button>
          <div class="ma__main-nav-hamburger__subitems js-main-nav-hamburger-content is-closed">
            <ul id="{{ menuId }}" role="menu" aria-labelledby="{{ buttonId }}"
                class="ma__main-nav-hamburger__container js-main-nav-hamburger__container">
              {% for subNav in nav.subNav %}
                <li class="ma__main-nav-hamburger__subitem js-main-nav-hamburger__subitem" role="menuitem"><a href="{{
                    subNav.href }}" class="ma__main-nav-hamburger__link js-main-nav-hamburger__link">{{ subNav.text
                        }}</a></li>
              {% endfor %}
              <li class="ma__main-nav-hamburger__subitem js-main-nav-hamburger__subitem" role="menuitem">
                <a href="{{ nav.href }}" class="js-main-nav-hamburger__link ma__main-nav-hamburger__link">
                  {{ icon('arrow-bent') }}
                  <span>
                    <span class="visually-hidden">See all topics under </span>
                    {{ nav.text }}
                  </span>
                </a>
              </li>
            </ul>
          </div>
        {% else %}
          <button type="button" id="{{ buttonId }}" class="ma__main-nav-hamburger__top-link" tabindex="{{ loop.first? 0 : -1 }}">{{ nav.text }}</button>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</div>
